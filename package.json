{
  "name": "anyclick",
  "private": true,
  "description": "Why not click on everything? - capture DOM context, screenshots, and integrate with GitHub Issues or AI coding agents",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ewjdev/anyclick.git"
  },
  "homepage": "https://anyclick.ewj.dev",
  "bugs": {
    "url": "https://github.com/ewjdev/anyclick/issues"
  },
  "author": "ewjdev",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "release": "turbo run build && changeset publish",
    "version-packages": "changeset version",
    "test:roadmap": "node scripts/test-roadmap-sync.mjs",
    "roadmap:sync": "node scripts/sync-roadmap.mjs",
    "roadmap:sync:dry": "node scripts/sync-roadmap.mjs --dry-run --verbose"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "prettier": "3.5.3",
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "csstype": "^3.1.3"
  },
  "packageManager": "yarn@1.22.19"
}
